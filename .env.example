# SPARQL Configuration
SPARQL_ENDPOINT=https://ld.admin.ch/query
SPARQL_BASE_URL=https://environment.ld.admin.ch/foen/hydro

# Site Configuration
# Comma-separated list of station codes
SITE_CODES=2044,2112,2491,2355

# Parameters to collect (comma-separated)
# Available: station,discharge,measurementTime,waterLevel,dangerLevel,waterTemperature,isLiter
PARAMETERS=station,discharge,measurementTime,waterLevel,dangerLevel,waterTemperature,isLiter

# Output Configuration
HYDRO_DATA_DIR=./data
OUTPUT_FILENAME=lindas_hydro_data.csv

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY=2.0